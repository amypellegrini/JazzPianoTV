<!DOCTYPE html>
<html>
  <head>
    <title>JazzPianoTV</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/jptv-main.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Open+Sans|Raleway|Roboto|Playfair+Display+SC" rel="stylesheet">
    <meta name="description" content="Learn to play the Piano for real.">
    <meta name="author" content="Amy Pellegrini">
  </head>
  <body>
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '246268562555823',
          cookie     : true,
          xfbml      : true,
          version    : 'v2.8'
        });
        FB.AppEvents.logPageView();   
      };

      (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.9&appId=246268562555823";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
  
    <div id="root"></div>
    <div class="exercises">
      <div class="exercise-list group">
        <section id="ii-v-i">
          <h2>II - V - I</h2>
          <div class="exercise-item">
            <h3>II - V - I</h3>
            <p>AB Forms</p>
          </div>
          <div class="exercise-item">
            <h3>II - V - I</h3>
            <p>Drop-2 Voicings</p>
          </div>
          <div class="exercise-item">
            <h3>II - V - I</h3>
            <p>AB Forms + Greek Modes (Groups of 7)</p>
          </div>
          <div class="exercise-item">
            <h3>II - V - I</h3>
            <p>AB Forms + Greek Modes (Groups of 9)</p>
          </div>
        </section>
      </div>
      <div class="exercise-list group">
        <section id="groups-of-7">
          <h2>Note Groups</h2>
          <div class="exercise-item">
            <h3>Groups of 7</h3>
            <p>Greek Modes over II - V - I</p>
          </div>
          <div class="exercise-item">
            <h3>Groups of 9</h3>
            <p>Greek Modes over II - V - I</p>
          </div>
        </section>
      </div>
      <div class="exercise-list group">
        <section id="walking-bass">
          <h2>Walking Bass</h2>
          <div class="exercise-item">
            <h3>Walking Bass</h3>
            <p>Chord Root over II - V - I</p>
          </div>
        </section>
      </div>
    </div>
    <script src="/js/jptv-main.js"></script>
  </body>
</html>